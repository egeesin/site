{%- assign navigation = nav.primary -%}
{%- if navigation -%}
<nav class="c-nav__wrapper u-clearFix u-hidden@print" aria-label=Main>
	<input id=toggleNav-000 type=checkbox>
	<ul class="c-nav -responsive -typeTree -flowHorizontal -expandFromBlockStart -alignStart">
		{%- if options.showTitleInNav == true -%}
			<li class="c-nav__item">
				<a class="c-nav__anchor" href=/ alt="" title="Return to homepage" aria-label="Return to homepage">
					{%- if site.favicon.webp192 -%}
						<span class=c-iconWrapper>
							<img eleventy:ignore src='{{ site.favicon.webp192 }}' alt=''
						></span
					{%- else -%}
						<svg class="pi" viewBox='0 0 18 18' width="2rem">
							<use href='/pi.svg#house'></use>
						</svg
					{% comment %} {%- endif -%}><b>{{ site.title }}</b> {% endcomment %}
			{%- endif -%}><span style='font:normal 700 1.1em Iosevka Aegean;letter-spacing:-1.25px;'>{{ site.pwa.titleShort }}</span>
				</a>
			</li>
		{%- endif -%}
		{%- comment -%}
		<li class="c-nav__item -viewIconOnly u-hidden@lap">
			<label class="c-nav__anchor" for=toggleNav-000 onclick>
				<svg class=pi viewBox="0 0 18 18" width=18px>
					<use href=/pi.svg#list-to-left>
				</svg><span>Hide&nbsp;Menu</span>
			</label>
		</li>
		{%- endcomment -%}
		{%- comment -%}
		FIRST LEVEL OF NAVIGATION
		{%- endcomment -%}
		{%- for item in navigation -%}
			<li class="c-nav__item{% if item.view %} -view{{ item.view }}{% endif %}{% if item.align == "right" %} -leanEnd{% endif %}" {%- if item.url == page.url %} aria-current=page{%- endif -%}>
				<a class="c-nav__anchor" href="{{ item.url }}" {%
					if item.alt -%} alt="{{ item.alt }}"{%- endif -%}{%-
					if item.url == page.url %} tabindex=-1{%- endif %}>
					{%- if item.pre -%}{{- item.pre }}{%- endif -%}
					{%- if item.icon -%}
					<svg class=pi viewBox='0 0 18 18' width=18px>
						<use href=/pi.svg#{{ item.icon }}></use>
					</svg>{%- endif 
					-%}<span>{{- item.label -}}</span>{{- item.post -}}</a>
				{%- if item.submenu -%}
					{%- comment -%}
					SECOND LEVEL OF NAVIGATION
					{%- endcomment -%}
					{%- assign submenu = item.submenu -%}
					{%- if submenu -%}
						<ul class="c-nav__submenu{% if item.submenuStyle == "stacked" %} -viewStack{% endif %}">
						{%- for item in submenu -%}
							<li class="c-nav__item{% if item.view %} -view{{ item.view }}{% endif %}{% if item.align == "right" %} -leanEnd{% endif %}" {%- if item.url == page.url %} aria-current=page{%- endif -%}>
							<a class="c-nav__anchor" href="{{ item.url }}" {%
								if item.alt -%} alt="{{ item.alt }}"{%- endif -%}{%-
								if item.url == page.url %} tabindex=-1{%- endif %}>
								{%- if item.pre -%}{{- item.pre }}{%- endif -%}
								{%- if item.icon -%}
								<svg class=pi viewBox='0 0 18 18' width=18px>
									<use href=/pi.svg#{{ item.icon }}></use>
								</svg>{%- endif 
								-%}<span>{{- item.label -}}</span>{{- item.post -}}</a>
								{%- if item.submenu -%}
									{%- comment -%}
									THIRD (LAST) LEVEL OF NAVIGATION
									{%- endcomment -%}
									{%- assign submenu2 = item.submenu -%}
									{%- if submenu2 -%}
										<ul class="c-nav__submenu{% if item.submenuStyle == "stacked" %} -viewStack{% endif %}">
										{%- for item in submenu2 -%}
											<li class="c-nav__item{% if item.view %} -view{{ item.view }}{% endif %}{% if item.align == "right" %} -leanEnd{% endif %}" {%- if item.url == page.url %} aria-current=page{%- endif -%}>
											<a class="c-nav__anchor" href="{{ item.url }}" {%
												if item.alt -%} alt="{{ item.alt }}"{%- endif -%}{%-
												if item.url == page.url %} tabindex=-1{%- endif %}>
												{%- if item.pre -%}{{- item.pre }}{%- endif -%}
												{%- if item.icon -%}
												<svg class=pi viewBox='0 0 18 18' width=18px>
													<use href=/pi.svg#{{ item.icon }}></use>
												</svg>{%- endif 
												-%}<span>{{- item.label -}}</span>{{- item.post -}}</a>
											</li>
											{{- item.separator -}}
										{%- endfor -%}
									</ul>
									{%- endif -%}
								{%- endif -%}
							</li>
							{{- item.separator -}}
						{%- endfor -%}
					</ul>
					{%- endif -%}
				{%- endif -%}
			</li>
			{{- item.separator -}}
		{%- endfor -%}
		{%- if site.options.showThemeSwitcher == true -%}
		<li class="c-nav__item -viewIconOnly -leanEnd">
			<a class="c-nav__anchor" href=#! data-drkmd-toggle title="Toggle dark mode" aria-label="Toggle dark mode">
				<svg class=pi viewBox="0 0 18 18" width=18px>
					<use id=darkModToggle href=/pi.svg#sun></use>
				</svg><span>Toggle Theme</span>
				<!-- <a href>ðŸŒ—</a> -->
			</a>
		</li>
		{%- endif %}
	</ul>
</nav>
{%- endif -%}
